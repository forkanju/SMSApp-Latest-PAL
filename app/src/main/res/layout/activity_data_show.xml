<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataShowActivity">


    <Button
        android:id="@+id/addCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="+ Add Condition"
        android:textAllCaps="false" />

    <RelativeLayout
        android:id="@+id/conditionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addCondition">

        <Spinner
            android:id="@+id/include_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingEnd="10dp" />

        <Spinner
            android:id="@+id/select_field_spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/include_spinner"
            android:layout_gravity="start"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingEnd="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_field_spinner"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="30dp"
            android:text="+Add"
            android:textAllCaps="false" />

    </RelativeLayout>

    <Spinner
        android:id="@+id/table_select_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/conditionLayout"
        android:layout_gravity="start"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:paddingEnd="10dp" />

    <Button
        android:layout_below="@id/table_select_spinner"
        android:id="@+id/getData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Get Data"
        android:textAllCaps="false" />

</RelativeLayout>